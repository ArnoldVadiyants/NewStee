<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/media_player_small" android:id="@+id/thread_media_player"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/thread_media_player"
        android:layout_marginLeft="@dimen/outer_margin_big"
        android:layout_marginRight="@dimen/outer_margin_big"
        android:layout_marginTop="@dimen/outer_margin">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            >

            <ImageView
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:id="@+id/imageView3"
                android:background="@drawable/thread"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:text="@string/thread"
                android:id="@+id/textView2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/icon_margin"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <include layout="@layout/start_button" android:id="@+id/thread_start_button"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginRight="@dimen/icon_margin"></include>

            <ImageButton
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:id="@+id/filter_imageButton"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/icon_margin"

                android:background="@drawable/filter_button_back"
                />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/thread_content"
            android:layout_marginTop="@dimen/outer_margin_medium">
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>