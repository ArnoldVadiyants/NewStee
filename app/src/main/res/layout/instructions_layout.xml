<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"
        android:alpha="0.3"
        >
    </FrameLayout>

    <LinearLayout

android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:layout_gravity="center"
android:background="@android:color/background_light"
android:layout_margin="24dp">

        <ImageButton
    android:layout_width="@dimen/icon_size_big"
    android:layout_height="@dimen/icon_size_big"
    android:id="@+id/instructions_dismiss_imageButton"
    android:layout_gravity="right|top"
    android:src="@drawable/exit_image_dark"
    android:background="@android:color/transparent"
    android:scaleType="centerInside"
    android:padding="8dp"
    android:layout_marginBottom="-24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/instructions_welcome_textView"
            android:textColor="@color/colorPrimary"
            android:text="@string/instructions_welcome"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/outer_margin_medium"
            android:layout_marginRight="@dimen/outer_margin_big"
            android:layout_marginLeft="@dimen/outer_margin_big"
            android:textSize="16dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:id="@+id/instructions_image_view"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textSize="14dp"
                android:text="Small Text"
                android:id="@+id/instructions_title_view"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/outer_margin_medium"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="В плейлист попадают новости добавленные вами из общего потока и от подписок на издания ааа а а а ааа а а а а а а а а а а аа а а аааа а а а ааа а ааааа ааааа ааа а аа аа аа аа а ааа а а а"
    android:id="@+id/instructions_message_TextView"
    android:layout_gravity="center"
    android:textColor="@color/colorPrimary"
    android:layout_marginLeft="@dimen/outer_margin_big"
    android:layout_marginRight="@dimen/outer_margin_big"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="@dimen/outer_margin_medium"
    android:textSize="14dp"
    android:gravity="fill"/>

</LinearLayout>


</FrameLayout>
