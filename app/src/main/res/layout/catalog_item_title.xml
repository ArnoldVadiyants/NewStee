<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/catalog_feed">

        <ImageView
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:id="@+id/canal_icon_ImageVew"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/bbc_news_logo_cyrcle"
            android:layout_marginRight="@dimen/icon_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="National Geographic"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textAllCaps="true"
            android:id="@+id/title_TextView"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/icon_margin"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>


    <ImageButton
        android:layout_width="@dimen/icon_size_small_2"
        android:layout_height="@dimen/icon_size_small_2"
        android:id="@+id/catalog_item_add_ImageButton"
        android:layout_marginLeft="@dimen/icon_margin"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:src="@drawable/news_to_add_button"
        android:background="@android:color/transparent"
        android:padding="2dp"
        android:focusableInTouchMode="false"/>
</LinearLayout>